import React from 'react';

export default function ProblemSolution() {
  const highlightText = (text: string) => {
    return text.split(/(\【[^\】]+\】)/g).map((part, index) => {
      if (part.startsWith('【') && part.endsWith('】')) {
        return (
          <span key={index} style={{ color: '#ff3131', fontWeight: 'bold' }}>
            {part.replace(/【|】/g, '')}
          </span>
        );
      }
      return part;
    });
  };

  return (
    <section style={{ backgroundColor: 'white', padding: '30px 16px' }}>
      <Step1 />
      <Step2 highlightText={highlightText} />
      <Summary />
      <Step3 highlightText={highlightText} />
      <Step4 highlightText={highlightText} />
      <Step5 highlightText={highlightText} />
      <Step6 highlightText={highlightText} />
      <Step7 highlightText={highlightText} />
      <Step8 highlightText={highlightText} />
      <Step9 />
    </section>
  );
}

function Step1() {
  const problems = [
    { text: '案件を取っても', highlight: '単価が安すぎる' },
    { text: '本業＋副業で', highlight: '時間ばかり奪われる' },
    { text: '頑張っているのに', highlight: '収入もキャリアも積み上がらない' }
  ];

  return (
    <div style={{
      backgroundColor: '#1a1a1a',
      padding: '40px 10px',
      borderRadius: '16px',
      margin: '20px 0',
      position: 'relative'
    }}>
      {/* ヘッダー部分 */}
      <div style={{
        position: 'relative',
        marginBottom: '15px'
      }}>
        <h2 style={{
          color: 'white',
          fontWeight: 'bold',
          fontSize: 'clamp(36px, 6vw, 52px)',
          lineHeight: 1.4,
          fontFamily: "'Yu Mincho', 'Hiragino Mincho ProN', serif"
        }}>
          こんなお悩み<br />ありませんか？
        </h2>
        <div style={{
          position: 'absolute',
          top: '-30px',
          right: '0',
          width: '130px',
          height: '130px',
          borderRadius: '50%',
          overflow: 'hidden'
        }}>
          <img
            src="https://gooday.nikkei.co.jp/atcl/report/16/031800011/031800004/1.jpg"
            alt="悩む人"
            style={{
              width: '100%',
              height: '100%',
              objectFit: 'cover'
            }}
          />
        </div>
      </div>

      {/* 白ボックス */}
      <div style={{
        backgroundColor: '#ffffff',
        backgroundImage: `
          linear-gradient(rgba(200, 200, 200, 0.4) 1px, transparent 1px),
          linear-gradient(90deg, rgba(200, 200, 200, 0.4) 1px, transparent 1px)
        `,
        backgroundSize: '20px 20px',
        borderRadius: '12px',
        padding: '30px 0',
        boxShadow: '0 4px 12px rgba(0, 0, 0, 0.3)'
      }}>
        <ul style={{ listStyle: 'none', padding: '0 5px', margin: 0 }}>
          {problems.map((problem, index) => (
            <li key={index} style={{
              display: 'flex',
              alignItems: 'flex-start',
              marginBottom: index < problems.length - 1 ? '20px' : '0',
              fontSize: '18px',
              lineHeight: 1.3,
              fontWeight: 'bold'
            }}>
              <img
                src="https://i0.wp.com/ai-catcher.com/wp-content/uploads/2016/11/115.png"
                alt="悩み"
                style={{
                  width: '20px',
                  height: '20px',
                  borderRadius: '50%',
                  marginRight: '10px',
                  flexShrink: 0,
                  objectFit: 'cover'
                }}
              />
              <div>
                <span>{problem.text}</span>
                <span style={{ color: '#3b82f6', fontWeight: 'bold' }}>{problem.highlight}</span>
              </div>
            </li>
          ))}
        </ul>
      </div>

      {/* 吹き出し風の三角形 */}
      <div style={{
        width: 0,
        height: 0,
        borderLeft: '20px solid transparent',
        borderRight: '20px solid transparent',
        borderTop: '20px solid #1a1a1a',
        margin: '0 auto',
        position: 'relative',
        top: '-1px'
      }} />
    </div>
  );
}

